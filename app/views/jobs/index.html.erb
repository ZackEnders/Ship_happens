<h1> New Job </h1>

<h2> Cost Calculator </h2>
 	<form>
   Client Rate: <input type="text" name="Client Rate" value = '<%= @client.rate%>'>
  <br>
   Number of Containers: <input type="text" name="Number of Containers" >
  <br>
  <button id = 'cost_button'> Calculate Cost </button>
 	</form>
<br>


<h2> Build Your Job </h2>
<%= simple_form_for @job do |f| %>
  <%= f.input :cargo_name, label:'Name Your Job:' %>
  <%= f.input :cargo_description, label: 'Describe Your Cargo:', as: :text %>
  <%= f.input :amount_of_c, label: 'Number of Containers:' %>
 Cost of Job: <div id = 'job_cost'> 
<%= f.input :cost, label: 'Cost of Job'%>
  </div>


   <%= f.input :origin, collection: ["Hong Kong", "London", "Los Angeles", "New York City", "Rotterdam", "Shanghai", "Shenzen"] %>
   <%= f.input :destination, collection: ["Hong Kong", "London", "Los Angeles", "New York City", "Rotterdam", "Shanghai", "Shenzen"] %>
  <%= f.button :submit %>
<% end %>