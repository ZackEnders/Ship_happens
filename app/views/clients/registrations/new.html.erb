<div class="field">Sign up


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div>
    <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email" %>
  </div>

  <div>
    <%= f.text_field :name, placeholder: "Name", autofocus: true, autocomplete: "name" %>
  </div>

  <div>
    <%= f.password_field :password, placeholder: "Password", autocomplete: "off" %>

    <div><% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %></div>
  </div>

  <div>
    <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", autocomplete: "off" %>
  </div>

  <div>
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "clients/shared/links" %>

</div>
